@page
@using SeguimientoAcademico.App.Dominio
@model SeguimientoAcademico.App.Presentacion.Pages.ActualizarModel
@{
}

<h1>Modificacion de Estudiantes</h1>

<form method="post">

    
    <div class="form-group">
    <label asp-for="estudiante.Id"></label>
    <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Nombre"></label>
    <input asp-for="estudiante.Nombre" class="form-control" required="requiered">
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Apellido"></label>
    <input asp-for="estudiante.Apellido" class="form-control" required="requiered">
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Telefono"></label>
    <input asp-for="estudiante.Telefono" class="form-control" required="requiered">
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Genero"></label>
    <select asp-for="estudiante.Genero" asp-items="Html.GetEnumSelectList<Genero>()"class=form-control ></select>
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Ciudad"></label>
    <input asp-for="estudiante.Ciudad" class="form-control" required="requiered">
    </div>



    <button type="submit" class="btn btn-primary" >Actualizar</button>
    

</form>

