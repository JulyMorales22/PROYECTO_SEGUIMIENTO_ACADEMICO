@page
@using SeguimientoAcademico.App.Dominio
@model SeguimientoAcademico.App.Presentacion.Pages.AsignarFamiliarModel
@{
}

<h1>Asignar Familiar a @Model.estudiante.Nombre @Model.estudiante.Apellido </h1>

<form method="post">


    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Id"></label>
        <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>
    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Nombre"></label>
        <input asp-for="estudiante.Nombre" class="form-control" required="requiered">
    </div>
    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Apellido"></label>
        <input asp-for="estudiante.Apellido" class="form-control" required="requiered">
    </div>
    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Telefono"></label>
        <input asp-for="estudiante.Telefono" class="form-control" required="requiered">
    </div>
    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Genero"></label>
        <select asp-for="estudiante.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class=form-control></select>
    </div>
    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Ciudad"></label>
        <input asp-for="estudiante.Ciudad" class="form-control" required="requiered">
    </div>

    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Latitud"></label>
        <select asp-for="estudiante.Latitud" asp-items="Html.GetEnumSelectList<Genero>()" class=form-control></select>
    </div>
    <div class="form-group" style="display: none;">
        <label asp-for="estudiante.Longitud"></label>
        <input asp-for="estudiante.Longitud" class="form-control" required="requiered">
    </div>

    <div class="form-group">
        <label asp-for="estudiante.NombreFamiliar"></label>
        <input asp-for="estudiante.NombreFamiliar" class="form-control" required="requiered">
    </div>

    <div class="form-group">
        <label asp-for="estudiante.TelefonoFamiliar"></label>
        <input asp-for="estudiante.TelefonoFamiliar" class="form-control" required="requiered">
    </div>

    <div class="form-group">
        <label asp-for="estudiante.ParentescoFamiliar"></label>
        <input asp-for="estudiante.ParentescoFamiliar" class="form-control" required="requiered">
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/Estudiantes/Index"><button type="button" class="btn btn-secundary">Regresar</button></a>

</form>
