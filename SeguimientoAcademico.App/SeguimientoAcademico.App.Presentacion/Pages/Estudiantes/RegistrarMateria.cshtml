@model SeguimientoAcademico.App.Presentacion.Pages.RegistrarMateriaModel
@{
}

<h1>Registro de Actividad</h1>

<form method="post" class="scroll">  

    <div class="form-group">
    <label asp-for="estudiante.Id"></label>
    <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Nombre"></label>
    <input asp-for="estudiante.Nombre" class="form-control" readonly>
    
    </div>

    <div class="form-group">
    <label asp-for="estudiante.Apellido"></label>
    <input asp-for="estudiante.Apellido" class="form-control" readonly>
    </div>

    <div class="form-group">
    <label asp-for="materia.NombreMateria"></label>
    <input asp-for="materia.NombreMateria" class="form-control" required="requiered">
    </div>

    <div class="form-group">
    <label asp-for="materia.CargaHoraria"></label>
    <input asp-for="materia.CargaHoraria" class=form-control required="requiered" >
    </div>

    <div class="form-group">
    <label asp-for="materia.IdMaestro"></label>
    <input asp-for="materia.IdMaestro" class="form-control" required="requiered">
    </div>

    <div class="form-group">
    <label asp-for="materia.IdTutor"></label>
    <input asp-for="materia.IdTutor" class="form-control" required="requiered">
    </div>

    

    <button type="submit" class="btn btn-primary">Registrar Actividad</button>
    

</form>


